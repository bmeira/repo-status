<?xml version="1.0" encoding="UTF-8"?>

<schemalist>
    <schema id="org.gnome.shell.extensions.repo-status" path="/org/gnome/shell/extensions/repo-status/">
        <!-- See also: https://docs.gtk.org/glib/gvariant-format-strings.html -->
        <key name="auth-token" type="s">
            <default>""</default>
            <summary>Authorization token</summary>
            <description>User authorization token for API requests (Bearer is mandatory for now)</description>
        </key>
        <key name="repo-url" type="s">
            <default>""</default>
            <summary>Repository URL</summary>
        </key>
        <key name="api-request-interval" type="i">
            <range min="30" max="86400"/>
            <default>600</default>
            <summary>API request interval</summary>
            <description>Interval (in seconds) to perform API requests</description>
        </key>
        <key name="api-request-timeout" type="i">
            <range min="1" max="5"/>
            <default>2</default>
            <summary>Request timeout</summary>
            <description>Timeout (in ms) for API requests</description>
        </key>
        <key name="hide-extension" type="b">
            <default>false</default>
            <summary>Flag to hide extension when no significant events exist</summary>
        </key>
        <key name="show-notifications" type="b">
            <default>true</default>
            <summary>Flag to enable or disable notifications</summary>
        </key>
    </schema>
</schemalist>